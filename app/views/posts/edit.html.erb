<% provide :title, 'Editing Post' %>

<section id="edit-post" class="section">
  <header class="section-header">
    <div class="container">
      <h1>Editing Post</h1>
    </div>
  </header>

  <div class="section-body container">
    <%= render 'form', post: @post %>
    <aside class="btn">
      <%= link_to 'Show', @post %> |
      <%= link_to 'Back', posts_path %>
    </aside>
  </div>
</section>
